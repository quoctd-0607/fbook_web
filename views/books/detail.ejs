<section class="relative fix gray-bg">
    <div class="container">
        <div class="space-30"></div>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 text-center">
                <h2><%= data.item.title %></h2>
                <span> (<%= data.item.count_view %> <%= __('views') %>)</span>
                <div id="confirmMessage"></div>
                <div class="space-10"></div>
                <div class="title-bar blue">
                    <ul class="list-inline list-unstyled">
                        <li><i class="icofont icofont-square"></i></li>
                        <li><i class="icofont icofont-square"></i></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row relative-position">
            <div class="col-xs-12 col-md-6 book-list-position padding60">
                <div class="book-list-photo">
                    <% if (data.item.media.length) { %>
                        <div class="book-list">
                            <% data.item.media.forEach(function (image) { %>
                            <div class="book_item">
                                <img src="<%= image.web.medium_path %>" alt="<%= __('book') %>" class="img-avatar-book">
                            </div>
                            <% }) %>
                            <% if (data.item.media.length == 1) { %>
                                <div class="book_item">
                                    <img src="<%= data.item.media[0].web.medium_path %>" alt="<%= __('book') %>" class="img-avatar-book">
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="book-list">
                            <div class="book_item">
                                <img src="/images/book_default.jpg" alt="<%= __('book') %>" class="img-avatar-book">
                            </div>
                        </div>
                    <% } %>
                </div>
                <% if (data.item.media.length > 1) { %>
                    <div class="bookslide_nav relative-position">
                        <i class="glyphicon glyphicon-chevron-left testi_prev color-777"></i>
                        <i class="glyphicon glyphicon-chevron-right testi_next color-777"></i>
                    </div>
                <% } %>
            </div>
            <div class="col-xs-12 pull-right col-md-6 padding60 wow fadeInRight">
                <div class="book-content">
                    <div class="book-details-item">
                        <div class="row">
                            <% if (data.item.author != 'undefined') { %>
                                <p>
                                    <h4 class="tip-left"><%= __('Author') %>: <span class="text-warning"><%= data.item.author %></span></h4>
                                </p>
                            <% } else { %>
                                <p><%= __('No Author') %></p>>
                            <% } %>
                            <input id="rating-book" name="star" class="rating" data-min="0" data-max="5" value=<%= data.item.avg_star %> disabled="true" data-step="0.01" data-size="xs">
                        </div>
                        <div class="space-10"></div>
                        <div class="row">
                            <p>
                                <% switch (langCategory) {
                                    case 'vi': %>
                                        <h4 class="tip-left"><%= __('Category') %>: <span class="text-warning"><%= data.item.category.name_vi %></span></h4>
                                    <% break;
                                    case 'en': %>
                                        <h4 class="tip-left"><%= __('Category') %>: <span class="text-warning"><%= data.item.category.name_en %></span></h4>
                                    <% break;
                                    case 'jp': %>
                                        <h4 class="tip-left"><%= __('Category') %>: <span class="text-warning"><%= data.item.category.name_jp %></span></h4>
                                    <% break;
                                    default: %>
                                        <h4 class="tip-left"><%= __('Category') %>: <span class="text-warning"><%= data.item.category.name_vi %></span></h4>
                                <% } %>
                            </p>
                        </div>
                        <div class="space-10"></div>
                        <div class="row">
                            <h4 class="tip-left"><%= __('Shared by') %>: </h4>
                            <% var isCurrentUserOwneredBook = false; %>
                            <div class="list-owners">
                                <% if (data.item.owners.length > 0) { %>
                                    <% data.item.owners.forEach(function (owner) {
                                        if (!isCurrentUserOwneredBook && typeof(user) !== 'undefined' && user && user.id === owner.id) {
                                            isCurrentUserOwneredBook = true;
                                        }
                                    %>
                                        <a class="owner-image<%= owner.id %>" data-toggle="tooltip" title="<%= owner.name %>" href="/users/<%= owner.id %>">
                                            <img src="<%= (owner && owner.avatar) ? owner.avatar : '/images/user_default.png' %>"
                                                onerror="imgBackUp(this)" 
                                                class="media-object author-photo img-thumbnail img-owner-detail img-circle background--white"
                                                alt="<%= __('book') %>">
                                        </a>
                                    <% }) %>
                                <% } else { %>
                                    <div class="no-image">
                                        <span><%= __('No Owner') %></span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="space-10"></div>
                        <div class="row">
                            <h4 class="tip-left"><%= __('Branch of book') %>: </h4>
                            <p class="text-warning lead"><%- data.item.office.name %></p>
                        </div>
                        <div class="row">
                            <h4 class="tip-left"><%= __('Activities') %>: </h4>
                            <div class="col-xs-12 col-sm-4">
                                <div class="media padding5">
                                    <div class="media-body">
                                        <a href="javascript:void(0);" onclick="showTab('#user_review')">
                                            <span class="badge" id="review-span"><%= data.item.reviews_detail.length %></span> <%= __('Review')%>
                                            <span class="badge"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <div class="media">
                                    <div class="media-body">
                                        <a href="javascript:void(0);" onclick="showTab('#user_waiting')">
                                            <span class="badge"><%= data.item.users_waiting.length %></span> <%= __('Waiting')%>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <div class="media">
                                    <div class="media-body">
                                        <a href="javascript:void(0);" onclick="showTab('#user_reading')">
                                            <span class="badge"><%= data.item.users_reading.length %></span> <%= __('Reading')%>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <div class="media">
                                    <div class="media-body">
                                        <a href="javascript:void(0);" onclick="showTab('#user_returning')">
                                            <span class="badge"><%= data.item.users_returning.length %></span> <%= __('Returning')%>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <div class="media">
                                    <div class="media-body">
                                        <a href="javascript:void(0);" onclick="showTab('#user_returned')">
                                            <span class="badge"><%= data.item.users_returned.length %></span> <%= __('Returned')%>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="space-20 hide-book" data-book-id="<%= data.item.id %>"></div>
                        <div class="row btn-action">
                            <% if (data.item.btn_booking.status == configs.book_user.status.waiting) { %>
                                <% if (data.item.owners.length > 0) { %>
                                    <button class="btn btn-primary btn-xs" data-office-id="<%= data.item.office.id %>" name="booking">
                                        <i class="glyphicon glyphicon-hand-up"></i>
                                        <%= __(data.item.btn_booking.text) %>
                                    </button>
                                <% } %>
                            <% } else if (data.item.btn_booking.status == configs.book_user.status.returning) { %>
                                <button class="btn btn-success btn-xs" name="return"
                                    data-book-id="<%= data.item.id %>"
                                    data-owner-id="<%= data.item.return_book_for_owner.id %>"
                                    data-status="<%= data.item.btn_booking.status %>">
                                    <%= __(data.item.btn_booking.text) %>
                                </button>
                            <% } else if (data.item.btn_booking.status == configs.book_user.status.cancel_waiting) { %>
                                <button class="btn btn-warning btn-xs" name="cancel"
                                    data-book-id="<%= data.item.id %>"
                                    data-owner-id="<%= data.item.cancel_book_for_owner.id %>"
                                    data-status="<%= data.item.btn_booking.status %>">
                                    <%= __(data.item.btn_booking.text) %>
                                </button>
                            <% } else if (data.item.btn_booking.status == configs.book_user.status.returned) { %>
                                <button class="btn btn-warning btn-xs" name="returning">
                                    <%= __(data.item.btn_booking.text) %>
                                </button>
                            <% } %>

                            <% if (isCurrentUserOwneredBook) { %>
                                <button class="btn btn-danger btn-sm remove-owner"><i class="glyphicon glyphicon-remove"></i> <%= __('Remove owner this book') %></button>
                            <% } else { %>
                                <button class="btn btn-primary btn-sm add-owner" data-office-id="<%= data.item.office.id %>" data-book-id="<%= data.item.id %>" data-office-id-user="<%= user != null ? user.office_id : null %>" data-name-book="<%= data.item.title %>"><i class="glyphicon glyphicon-plus"></i> <%= __('I have this book')%>  </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <h4><%= __('Description') %></h4>
            <div class="more fix-text"><%- data.item.description %></div>
        </div>
    </div>
    <div class="space-20"></div>

    <!--Begin Modal Booking-->
    <div aria-labelledby="modalWantToReadLabel" class="modal fade" id="modalWantToRead" role="dialog" style="display: none;" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>
                    <h5 class="modal-title" id="modalWantToReadLabel">
                        <%= __('Who do you want to read this book %s from?', data.item.title) %>
                    </h5>
                </div>
                <div class="modal-body">
                    <form action="/books/booking/<%= data.item.id %>" method="post" name="form-booking-book">
                        <input type="hidden" name="status" value="<%= data.item.btn_booking.status %>">
                        <% if (data.item.owners.length > 0) { %>
                            <% data.item.owners.forEach(function (owner, index) { %>
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="radio" name="owner_id" <%= (index === 0) ? 'checked' : ''%> value="<%= owner.id %>" required aria-required="true"/> <%= owner.name %> - <%= __('You can') %> <i><span class="text-danger"> <%= (owner.pivot.status == configs.book.status.available) ? __('Ready to read') : __('Add to waiting') %></span></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } %>
                        <div class="col-sm-8">
                            <%= __('Choose the time you want to borrow this book') %>:
                        </div>
                        <div class="col-sm-4">
                            <select id="days_to_read" name="days_to_read" required="required" class="form-control days-to-read">
                                <% for (i = 1; i <= 30; i ++) { %>
                                    <% if (i == 7) { %>
                                        <option value="<%= i %>" selected><%= __('%s days', i) %></option>
                                    <% } else if (i == 1) { %>
                                        <option value="<%= i %>"><%= __('%s day', i) %></option>
                                    <% } else { %>
                                        <option value="<%= i %>"><%= __('%s days', i) %></option>
                                    <% } %>
                                <% } %>
                            </select>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 text-center">
                                <button type="submit" class="btn btn-primary btn-xs"><%= data.item.btn_booking.text %><i class="fa fa-long-arrow-right"></i></button>
                                <input type="reset" class="btn btn-danger btn-xs"/>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!--End Modal Booking-->

    <!--Bengin Show Title and Author Book -->
    <div aria-labelledby="modalShowCurrentNameAndAuthorBookLabel" class="modal" id="modalShowCurrentNameAndAuthorBook" role="dialog" style="display: none; max-height: calc(100vh - 210px); overflow-y: auto" tableindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button"><span aria-hidden="true">×</span></button>
                    <h5 class="modal-title" id="modalWantToReadLabel">
                        <%= __('You have shared:') %>
                    </h5>
                </div>
                <div class="modal-body">
                </div>
                <br>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 text-center">
                        <button type="reset" class="btn btn-danger btn-xs" id="cancelModalAddBookOffice"><%= __('Cancel') %></button>
                        <button type="submit" class="btn btn-primary btn-xs" id="addBookOffice"><%= __('Create') %></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Show Title and Author Book -->

</section>

<section class="relative">
    <div class="container cmt-div">
        <div class="panel">
            <div class="panel-heading">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#user_review"><%= __('User Review') %></a></li>
                    <li><a data-toggle="tab" href="#user_waiting"><%= __('User Waiting') %></a></li>
                    <li><a data-toggle="tab" href="#user_reading"><%= __('User Reading') %></a></li>
                    <li><a data-toggle="tab" href="#user_returning"><%= __('User Returning') %></a></li>
                    <li><a data-toggle="tab" href="#user_returned"><%= __('User Returned') %></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="user_review">
                        <div class="row event-list">
                            <% if (data.item.reviews_detail.length > 0) { %>
                                <% data.item.reviews_detail.forEach(function (review) {
                                    if(review.id == data.item.current_user_review ){
                                        data.prototype.detect = 1;
                                    }
                                %>
                                <div class="col-xs-12 col-sm-8 col-md-12 revsdv" id="review<%= review.id %>">
                                    <div class="event-item wow fadeInRight comment-box">
                                        <div class="well padding5 owner-clear relative-position">
                                            <div class="media padding5">
                                                <div class="media-left">
                                                    <% if (review.user.avatar !== null) { %>
                                                        <a href="/users/<%= review.user.id %>" class="avatar">
                                                            <img src="<%= review.user.avatar %>" class="media-object" alt="<%= __('Avatar') %>">
                                                        </a>
                                                    <% } else { %>
                                                        <a href="/users/<%= review.user.id %>">
                                                            <img src="/images/user/icon_user_default.png" class="media-object  w-70-h-70" alt="<%= __('Avatar') %>">
                                                        </a>
                                                    <% } %>
                                                </div>
                                                <div class="media-body relative-position">
                                                    <div class="content-comment">
                                                        <div class="show tip-left">
                                                            <strong><%= review.user.name %></strong>
                                                            <span><%= review.created_at %></span>
                                                        </div>
                                                        <h4 class="media-heading list-inline list-unstyled rating-star m-0">
                                                            <% for (var i=0; i<review.star; i++) { %>
                                                                <li class="active"><i class="icofont icofont-star"></i></li>
                                                            <% } %>
                                                        </h4>
                                                        <p class="m-0">
                                                            <%= review.title %>
                                                        </p>
                                                        <% if( data.item.current_user_review !== null && review.user.id == data.item.current_user_review.user.id){ %>
                                                            <button type="button" class="delete-btn-topright" value="<%= review.id %>" title="<%= __('Delete review') %>"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                                        <% } %>
                                                        <div class="custom-vote">
                                                            <div>
                                                                <p class="no-margin">
                                                                    <i class="icofont icofont-caret-up"></i>
                                                                </p>
                                                                <p class="no-margin margin-top-15px">
                                                                    <i class="icofont icofont-caret-down"></i>
                                                                </p>
                                                            </div>
                                                            <div>
                                                                <span><%= review.up_vote - review.down_vote %></span>
                                                            </div>
                                                        </div>
                                                        <a href="/books/view-review/<%= review.id %>" class="view_more"><i class="fa fa-eye"></i> <%= __('View More') %></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            <% } else { %>
                            <%= __('There are no review') %>
                            <% } %>
                        </div>
                        <div class="row ">
                            <div class="col-xs-12 col-sm-8 col-md-12 text-right">
                                <h4 class="m-bottom5">
                                    <a href="/books/<%= book_current %>/review" class="btn btn-primary hover-btn-default btn-customize">
                                        <% if(data.item.current_user_review !== null && data.detect !== null ){ %>
                                            <strong id="review_edit_btn"><%= __('Edit review') %></strong>
                                        <% } else { %>
                                            <strong><%= __('Add Review')%></strong>
                                        <% } %>
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>

                    <% if (data.item.users_reading) { %>
                        <div class="tab-pane fade" id="user_reading">
                            <div class="row event-list">
                                <% if (data.item.users_reading.length > 0) { %>
                                    <% data.item.users_reading.forEach(function (user) { %>
                                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1" id="user-<%= user.id %>">
                                        <div class="event-item wow fadeInRight">
                                            <% if (data.item.owners) { %>
                                                <% data.item.owners.forEach(function (owner) { %>
                                                    <div class="media-left owner-right">
                                                        <% if (owner.id === user.owner_id) { %>
                                                            <a href="/users/<%= owner.id %>">
                                                                <img src="<%= owner.avatar ? owner.avatar : '/images/user/icon_user_default.png'%>" class="w-30-h-30" alt="<%= __('Avatar') %>">
                                                                <%= owner.name %>
                                                            </a><strong>[<%= __('Owner this book') %>]</strong>
                                                        <% } %>
                                                    </div>
                                                <% }) %>
                                            <% } %>
                                            <div class="well padding5 owner-clear">
                                                <div class="media">
                                                    <div class="media-left">
                                                        <% if (user.avatar !== null) { %>
                                                            <a href="/users/<%= user.id %>">
                                                                <img src="<%= user.avatar %>" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                            </a>
                                                        <% } else { %>
                                                            <a href="/users/<%= user.id %>">
                                                                <img src="/images/user/icon_user_default.png" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                            </a>
                                                        <% } %>
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="space-10"></div>
                                                        <a href="/users/<%= user.id %>"><h4 class="media-heading"><%= user.name %></h4></a>
                                                        <div class="space-10"></div>
                                                        <p><%= user.email %></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                <% } %>
                            </div>
                        </div>
                   <% } else { %>
                       <%= __('No user reading this book') %>
                   <% } %>

                    <% if (data.item.users_waiting) { %>
                        <div class="tab-pane fade" id="user_waiting">
                            <div class="row event-list">
                                <% if (data.item.users_waiting.length > 0) { %>
                                    <% data.item.users_waiting.forEach(function (user) { %>
                                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1" id="user-<%= user.id %>">
                                        <div class="event-item wow fadeInRight">
                                            <% if (data.item.owners) { %>
                                                <% data.item.owners.forEach(function (owner) { %>
                                                    <div class="media-left owner-right">
                                                        <% if (owner.id === user.owner_id) { %>
                                                            <a href="/users/<%= owner.id %>">
                                                                <img src="<%= owner.avatar ? owner.avatar : '/images/user/icon_user_default.png'%>" class="w-30-h-30" alt="<%= __('Avatar') %>">
                                                                <%= owner.name %>
                                                            </a><strong>[<%= __('Owner this book') %>]</strong>
                                                        <% } %>
                                                    </div>
                                                <% }) %>
                                            <% } %>
                                            <div class="well padding5 owner-clear">
                                                <div class="media">
                                                    <div class="media-left">
                                                        <% if (user.avatar !== null) { %>
                                                            <a href="/users/<%= user.id %>">
                                                                <img src="<%= user.avatar %>" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                            </a>
                                                        <% } else { %>
                                                            <a href="/users/<%= user.id %>">
                                                                <img src="/images/user/icon_user_default.png" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                            </a>
                                                        <% } %>
                                                    </div>
                                                    <div class="media-body">
                                                        <div class="space-10"></div>
                                                        <a href="/users/<%= user.id %>"><h4 class="media-heading"><%= user.name %></h4></a>
                                                        <div class="space-10"></div>
                                                        <p><%= user.email %></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                                <% } %>
                            </div>
                        </div>
                   <% } else { %>
                       <%= __('No user waiting to read this book') %>
                   <% } %>

                   <% if (data.item.users_returning) { %>
                       <div class="tab-pane fade" id="user_returning">
                           <div class="row event-list">
                               <% if (data.item.users_returning.length > 0) { %>
                                   <% data.item.users_returning.forEach(function (user) { %>
                                   <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1" id="user-<%= user.id %>">
                                       <div class="event-item wow fadeInRight">
                                           <% if (data.item.owners) { %>
                                               <% data.item.owners.forEach(function (owner) { %>
                                                   <div class="media-left owner-right">
                                                       <% if (owner.id === user.owner_id) { %>
                                                           <a href="/users/<%= owner.id %>">
                                                               <img src="<%= owner.avatar ? owner.avatar : '/images/user/icon_user_default.png'%>" class="w-30-h-30" alt="<%= __('Avatar') %>">
                                                               <%= owner.name %>
                                                           </a><strong>[<%= __('Owner this book') %>]</strong>
                                                       <% } %>
                                                   </div>
                                               <% }) %>
                                           <% } %>
                                           <div class="well padding5 owner-clear">
                                               <div class="media">
                                                   <div class="media-left">
                                                       <% if (user.avatar !== null) { %>
                                                           <a href="/users/<%= user.id %>">
                                                               <img src="<%= user.avatar %>" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                           </a>
                                                       <% } else { %>
                                                           <a href="/users/<%= user.id %>">
                                                               <img src="/images/user/icon_user_default.png" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                           </a>
                                                       <% } %>
                                                   </div>
                                                   <div class="media-body">
                                                       <div class="space-10"></div>
                                                       <a href="/users/<%= user.id %>"><h4 class="media-heading"><%= user.name %></h4></a>
                                                       <div class="space-10"></div>
                                                       <p><%= user.email %></p>
                                                   </div>
                                               </div>
                                           </div>
                                       </div>
                                   </div>
                                   <% }) %>
                               <% } %>
                           </div>
                       </div>
                  <% } else { %>
                      <%= __('No user returning this book') %>
                  <% } %>

                   <% if (data.item.users_returned) { %>
                       <div class="tab-pane fade" id="user_returned">
                           <div class="row event-list">
                               <% if (data.item.users_returned.length > 0) { %>
                                   <% data.item.users_returned.forEach(function (user) { %>
                                   <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1" id="user-<%= user.id %>">
                                       <div class="event-item wow fadeInRight">
                                           <% if (data.item.owners) { %>
                                               <% data.item.owners.forEach(function (owner) { %>
                                                   <div class="media-left owner-right">
                                                       <% if (owner.id === user.owner_id) { %>
                                                           <a href="/users/<%= owner.id %>">
                                                               <img src="<%= owner.avatar ? owner.avatar : '/images/user/icon_user_default.png'%>" class="w-30-h-30" alt="<%= __('Avatar') %>">
                                                               <%= owner.name %>
                                                           </a><strong>[<%= __('Owner this book') %>]</strong>
                                                       <% } %>
                                                   </div>
                                               <% }) %>
                                           <% } %>
                                           <div class="well padding5 owner-clear">
                                               <div class="media">
                                                   <div class="media-left">
                                                       <% if (user.avatar !== null) { %>
                                                           <a href="/users/<%= user.id %>">
                                                               <img src="<%= user.avatar %>" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                           </a>
                                                       <% } else { %>
                                                           <a href="/users/<%= user.id %>">
                                                               <img src="/images/user/icon_user_default.png" class="media-object w-85-b-50" alt="<%= __('Avatar') %>">
                                                           </a>
                                                       <% } %>
                                                   </div>
                                                   <div class="media-body">
                                                       <div class="space-10"></div>
                                                       <a href="/users/<%= user.id %>"><h4 class="media-heading"><%= user.name %></h4></a>
                                                       <div class="space-10"></div>
                                                       <p><%= user.email %></p>
                                                   </div>
                                               </div>
                                           </div>
                                       </div>
                                    </div>
                                    <% }) %>
                                <% } %>
                            </div>
                        </div>
                    <% } else { %>
                        <%= __('No user returned this book') %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="space-20"></div>
</section>

