<div class="container row gray-bg" style="margin: 0 auto;">
    <div class="col-md-9 border-d6">
        <% data.items.forEach(function (section, key) { %>
        <!--Begin section-->
        <section id="section<%= key %>" class="gray-bg">
            <div class="space-40"></div>
            <div class="container section-book">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                        <h2><strong><%= __(section.title) %></strong></h2>
                        <div class="title-bar blue">
                            <ul class="list-inline list-unstyled">
                                <li><i class="icofont icofont-square"></i></li>
                                <li><i class="icofont icofont-square"></i></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="space-20"></div>
                <div class="row">
                    <% if (section.data.length > 0) { %>
                        <% section.data.forEach(function (book, index) { %>
                            <% if (book.owners) { %>
                                <% var countOwner = 0 %>
                                <% book.owners.forEach(function (owner) { %>
                                    <% countOwner++ %>
                                <% }) %>
                                <% if (countOwner > 0) { %>
                                    <div class="col-xs-12 col-md-4 wow fadeInLeft" data-wow-delay="0.1s" data-wow-offset="50">
                                        <div class="category-item well yellow">
                                            <div class="media">
                                                <% if (book.office.name == 'Tran Khat Chan') { %>
                                                    <span class="badge badge-1">
                                                        <a href="/home?officeId=<%= book.office.id %>" class="office_on_books">
                                                            <%= book.office.name %>
                                                        </a>
                                                    </span>
                                                <% } else if (book.office.name == 'Ha Noi Office') { %>
                                                    <span class="badge badge-2">
                                                        <a href="/home?officeId=<%= book.office.id %>" class="office_on_books">
                                                            <%= book.office.name %>
                                                        </a>
                                                    </span>
                                                <% } else if (book.office.name == 'Da Nang Office') { %>
                                                    <span class="badge badge-3">
                                                        <a href="/home?officeId=<%= book.office.id %>" class="office_on_books">
                                                            <%= book.office.name %>
                                                        </a>
                                                    </span>
                                                <% } else if (book.office.name == 'HCMC Office') { %>
                                                    <span class="badge badge-4">
                                                        <a href="/home?officeId=<%= book.office.id %>" class="office_on_books">
                                                            <%= book.office.name %>
                                                        </a>
                                                    </span>
                                                <% } else if (book.office.name == 'Handico Office') { %>
                                                    <span class="badge badge-5">
                                                        <a href="/home?officeId=<%= book.office.id %>" class="office_on_books">
                                                            <%= book.office.name %>
                                                        </a>
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge badge-notify">
                                                        <%= book.office.name %>
                                                    </span>
                                                <% } %>
                                                <div class="row">
                                                    <div class="media-left col-md-6">
                                                        <% if (book.image && book.image.web.thumbnail_path !== undefined) { %>
                                                            <img onclick="window.open('/books/<%= book.id %>', '_self')" 
                                                                src="<%= book.image.web.thumbnail_path %>" 
                                                                class="media-object img-avatar-book" 
                                                                alt="<%= book.title %>">
                                                        <% } else { %>
                                                            <img onclick="window.open('/books/<%= book.id %>', '_self')" 
                                                                src="/images/book_thumb_default.jpg" 
                                                                class="media-object img-avatar-book" 
                                                                alt="<%= book.title %>">
                                                        <% } %>
                                                    </div>
                                                    <div class="col-md-6 book-descrip">
                                                        <% if (typeof (book.title) != 'undefined' && book.title) {%>
                                                            <h5 title="<%= book.title %>" 
                                                                onclick="window.open('/books/<%= book.id %>', '_self')"
                                                                data-toggle="tooltip">
                                                                <%= getString(book.title, configs.book.title_limit_characters) %>
                                                            </h5>
                                                        <% } else {%>
                                                            <a href="/books/<%= book.id %>" target="_self">
                                                                <h5><%= __('No title') %></h5>
                                                            </a>
                                                        <% } %>
                                                        <% if (typeof (book.author) != 'undefined' && book.author) { %>
                                                            <h6 title="<%= book.author %>" data-toggle="tooltip"><%= __('By') %> <%= getString(book.author, configs.book.author_limit_characters) %></h6>
                                                        <% } else {%>
                                                            <h6><%= __('By') %> Framgia</h6>
                                                        <% } %>
                                                        <input id="rating-book" name="star" class="rating" data-min="0" data-max="5" value=<%= book.avg_star %> disabled="true" data-step="0.01" data-size="xs">
                                                        <div class="space-10"></div>
                                                        <p><%= __('Category') %>: </p>
                                                        <p>
                                                            <% switch (langCategory) {
                                                                case 'vi': %>
                                                                    <%= book.category.name_vi %>
                                                                <% break;
                                                                case 'en': %>
                                                                    <%= book.category.name_en %>
                                                                <% break;
                                                                case 'jp': %>
                                                                    <%= book.category.name_jp %>
                                                                <% break;
                                                                default: %>
                                                                    <%= book.category.name_vi %>
                                                            <% } %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="owners">
                                                <strong class="font-12"><%= __('Shared by')%> : </strong>
                                                <% if (book.owners) { %>
                                                    <% var countOwner = 0 %>
                                                    <% book.owners.forEach(function (owner) { %>
                                                        <%  countOwner++;
                                                            if (countOwner == 6) {
                                                                %> <strong> ... </strong> 
                                                        <% return; } %>
                                                        <img onclick="window.open('/users/<%= owner.id %>')" 
                                                            src="<%= (owner && owner.avatar) ? owner.avatar : '/images/user_default.png' %>"
                                                            onerror="imgBackUp(this)" 
                                                            data-toggle="tooltip" 
                                                            title="<%= owner.name %>" 
                                                            class="owner-image-home img-circle" 
                                                            alt="<%= __('Avatar') %>">
                                                    <% }) %>
                                                 <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            <% } %>
                        <% }) %>
                    <% } else { %>
                        <h5 class="text-center"><%= __('No book in section') %> </h5>
                    <% } %>
                </div>
                <%= console.log(lang) %>
                <% if (section.data.length > 0) { %>
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <% if (typeof(officeId) === 'undefined') { %>
                                <a href="/books/?field=<%= section.key %>&page=1" class="btn btn-warning btn-xs uppercase"><%= __('More')%></a>
                            <% } else { %>
                                <a href="/books/?field=<%= section.key %>&page=1&officeId=<%= officeId %>" class="btn btn-warning btn-xs uppercase"><%= __('More') %></a>
                            <% } %>
                        </div>
                    </div>
                    <div class="space-20"></div>
                <% } %>
            </div>
        </section>
        <!--End section-->
        <% }) %>
    </div>
    <div class="col-md-3 text-center gray-bg">
        <div class="space-40"></div>
        <h2><strong><%= __('Enthusiast') %></strong></h2>
        <div class="title-bar blue">
            <ul class="list-inline list-unstyled">
                <li><i class="icofont icofont-square"></i></li>
                <li><i class="icofont icofont-square"></i></li>
            </ul>
        </div>
        <div class="space-20"></div>
        <% if (data.item) { %>
            <% data.item.forEach(function(hotUser) {%>
                <div class="row hot-user">
                    <div class="row">
                        <div class="hot-user-img col-md-4">
                            <a href="/users/<%= hotUser.id %>">
                                <img src="<%= hotUser.avatar %>">
                            </a>
                        </div>
                        <div class="infor col-md-8 text-left">
                            <a href="/users/<%= hotUser.id %>"><h5><%= hotUser.name %></h5></a>
                            <h6 class="hot-user-email"><span class="glyphicon glyphicon-book icon-book"></span><%= hotUser.user_count %> <%= __('books') %></h6>
                            <% switch (hotUser.office_id) {
                                case 1: %>
                                    <span class="badge badge-3">
                                        <a href="#" class="office_on_books">
                                            Da Nang Office
                                        </a>
                                    </span>
                                <% break;
                                case 2: %>
                                    <span class="badge badge-1">
                                        <a href="#" class="office_on_books">
                                            Tran Khat Chan
                                        </a>
                                    </span>
                                <% break;
                                case 3: %>
                                    <span class="badge badge-5">
                                        <a href="#" class="office_on_books">
                                            Handico Office
                                        </a>
                                    </span>
                                <% break;
                                case 4: %>
                                    <span class="badge badge-4">
                                        <a href="#" class="office_on_books">
                                            Hanoi Office
                                        </a>
                                    </span>
                                <% break;
                                case 5: %>
                                    <span class="badge badge-4">
                                        <a href="#" class="office_on_books">
                                            HCMC Office
                                        </a>
                                    </span>
                                <% break;
                                default: %>
                                    <span class="badge badge-4">
                                        <a href="#" class="office_on_books">
                                            Hanoi Office
                                        </a>
                                    </span>
                            <% } %>
                        </div>    
                    </div>
                </div>
            <% }) %>
        <% } %>
        <hr class="hr-new">
        <div class="space-20"></div>
        <% if (typeof user != 'undefined' && typeof user.name !== 'undefined' && user.name) { %>
            <h2><strong><%= __('Newsfeed') %></strong></h2>
            <div class="title-bar blue">
                <ul class="list-inline list-unstyled">
                    <li><i class="icofont icofont-square"></i></li>
                    <li><i class="icofont icofont-square"></i></li>
                </ul>
            </div>
            <div class="space-20"></div>
            <div class="event-item wow fadeInRight">
                <% if (dataNoti && dataNoti.items.notificationFollow.data.length && dataNoti.items.notificationFollow.total) { %>
                    <% dataNoti.items.notificationFollow.data.forEach(function(data, index) { %>
                        <% if (index <= 4) { %>
                            <%if (data.type == configs.notification.waiting && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class="col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Waiting Books') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div> 
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.cancel && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class="col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Cancel book request') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.review && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class="col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Review Book') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.returning && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class=" col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Returning book') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.approve_returning && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class=" col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Return books successfully') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.approve_waiting && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class=" col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Accept your request waiting book') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.add_owner && data.book != null) { %>
                                <div class="row show-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class="col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Add book') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                            <%if (data.type == configs.notification.remove_owner && data.book != null) { %>
                                <div class="row hot-user">
                                    <div class="notification-box">
                                        <div class="hot-user-img news-img p-0 col-md-3">
                                            <a href="/users/<%= data.user_send.id %>">
                                                <img src="<%= data.user_send.avatar ? data.user_send.avatar : '/images/data.user_send/icon_data.user_default.png'%>" class="col-md-4 noti-img" alt="<%= __('Avatar') %>">
                                            </a>
                                        </div>
                                        <div class="infor notification-right text-justify">
                                            <a href="/users/<%= data.user_send.id %>"><h5><b><%= data.user_send.name %></b></h5></a>
                                            <a href="/books/<%= data.book.id %>/approve-request" class="notification_onclick" data-notification-id="<%= data.id %>">
                                                <h6 class="hot-user-email"><b><%= __('Remove Book') %></b>: <%= getString(data.book.title, configs.book.title_limit_characters) %></h6>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% } else { %>
                        <% } %>
                    <% }) %>
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <a href="/notifications" class="btn btn-warning btn-xs uppercase"><%= __('More')%></a>
                        </div>
                    </div>
                <% } else { %>
                    <h5 class="text-center"><%= __('No Newfeeds') %></h5>
                <% } %>
            </div>
        <% } else { %>

        <% } %>
    </div>
</div>
<script type="text/javascript">
    var height_news = $('.news-img img').width() + 10;
    $('.news-img img').css({'height':height_news + 'px'});
    var book_img_height = $(".media-object").map(function ()
    {
        return $(this).height();
    }).get(),

    maxHeight = Math.max.apply(null, book_img_height);
    $(".media-object").height(maxHeight);

    var section_height = $(".book-descrip").map(function ()
    {
        return $(this).height();
    }).get(),

    maxSectionHeight = Math.max.apply(null, section_height);
    $(".book-descrip").height(maxSectionHeight);
</script>
